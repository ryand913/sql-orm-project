doctype html
head
  title New Book
  link(rel='stylesheet' href='/stylesheets/style.css')
h1 Update Book
  include error
form(action="/books/" + book.id, method="post")
  p
    label(for='title') Title
    input#title(name='title' type='text',value=`${book.dataValues.title}`) 
  p
    label(for='author') Author
    input#author(name='author' type='text', value=`${book.dataValues.author}`)
  p
    label(for='genre') Genre
    input#genre(name='genre' type='text', value=`${book.dataValues.genre}`)
  p
    label(for='year') Year
    input#year(name='year' type='text', value=`${book.dataValues.year}`)

  p
    input(type='submit' value='Update Book')
form(action="/books/" + book.id + "/delete" method="post" onsubmit="return confirm('Do you really want to delete?');")
  p
     a.button(href='/books') Cancel
  p
    input(type='submit' value='Delete Book')
